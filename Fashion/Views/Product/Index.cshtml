@model IEnumerable<Fashion.Models.Product>

    @{
    ViewData["Title"] = "List Of Products";
    Layout = "_AdminLayout";
}
<p>
    <a class="float-right btn btn-primary" asp-action="Create"><i class="fa-regular fa-building"></i> Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
               <th>
                @Html.DisplayNameFor(model => model.ImageUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
           <th>
                @Html.DisplayNameFor(model => model.SubSubCategory)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SubSubCategory.SubCategory)
            </th>
             <th>
                @Html.DisplayNameFor(model => model.SubSubCategory.SubCategory.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
           
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
          
            <th>
                @Html.DisplayNameFor(model => model.Brand)
            </th>
          
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
              <td>
               <img class="rounded-circle" style="width:60px;" src="@item.ImageUrl">
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
           <td>
                @Html.DisplayFor(modelItem => item.SubSubCategory.SubSubCatName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SubSubCategory.SubCategory.SubCatName)
            </td>
             <td>
                @Html.DisplayFor(modelItem => item.SubSubCategory.SubCategory.Category.Name)
            </td>
           
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
          
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
           
            <td>
                @Html.DisplayFor(modelItem => item.Brand.Name)
            </td>
           
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
