
@model Product
<link rel="stylesheet" href="\css\productpage.css" />

      <div class="col-lg-3 col-md-6 mb-4 col-sm-12 ">
        <div class="dress-card">
          <div class="dress-card-head">
            <img class="dress-card-img-top" src="@Model.ImageUrl" alt="">
            <div class="surprise-bubble"><span class="dress-card-heart">
                <i class="bi bi-info-circle-fill"></i>
              </span><a asp-controller="Product" asp-action="ProductDetails" asp-route-id="@Model.Id"> <span>More</span></a></div>
          </div>
          <div class="dress-card-body">
            <h4 class="dress-card-title">@Model.Name</h4>
            <p class="dress-card-para">Womans printed clothing</p>
            <p class="dress-card-para"><span class="dress-card-price">$@Model.Price &ensp;</span></p>
            <div class="row text-center " >
              <div class=" card-button "><a href=""><div class="card-button-inner bag-button  ">Add to Bag</div></a></div>
              <div class=" card-button"><a href=""><div class="card-button-inner wish-button">Whishlist</div></a></div>
            </div>
          </div>
        </div>
      </div>
     