@model Fashion.Models.Category

@{
    ViewData["Title"] = "Delete";
    Layout = "_AdminLayout";
}



<h3>Are you sure you want to delete  @Model.Name?</h3>
<div class="col-md-4">
    <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" readonly />
                
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" readonly />
              
            </div>
    
    <form asp-action="DeleteConfirmed">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger float-right" /> 
        <a asp-action="Index" class="float-left">Back to List</a>
    </form>
</div>
