@model Fashion.Models.Category

@{
    ViewData["Title"] = "Details";
    Layout = "_AdminLayout";
}

<h1>Details</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Details">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" readonly />
                
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" readonly />
              
            </div>
            <div class="form-group">
                <a asp-action="Edit" class="btn btn-outline-success float-right" asp-route-id="@Model.Id" >Edit</a>
                <a class="btn btn-primary float-left" asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>

